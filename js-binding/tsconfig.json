{
    "extends": "@tsconfig/recommended/tsconfig.json",
    "ts-node": {
      "compilerOptions": {
        "module": "commonjs",
        "baseUrl": "./",
        "paths": {
            "*" : ["types/*"]
        }
      }
    },
    "compilerOptions": {
      "module": "commonjs",
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      "target": "es2019",
      "outDir": "dist",
      "rootDir": "./src",
      "declaration": true,
      "noImplicitAny": false,
      "moduleResolution": "node",
      "sourceMap": true,
      "baseUrl": ".",
      "paths": {
        "*": ["node_modules/*", "src/types/*"]
      },
      "resolveJsonModule": true,
      "noUnusedLocals": true,
      "noUnusedParameters": true
    },
    "include": ["src/*", "src/instructions/instructions.ts", "src/bindings/trove-manager-binding.ts", "src/bindings/stability-pool-binding.ts", "src/bindings/borrower-operations-binding.ts"],
    "exclude": ["src/**/*.test.ts", "**/node_modules", "dist"]
  }
  
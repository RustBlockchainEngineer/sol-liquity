{
  "name": "sol-liquity",
  "version": "0.0.1",
  "description": "Solana Liquity Protocol",
  "scripts": {
    "push":"git add . && git commit -m 'auto updates' && git push",
    "switch-localnet":"solana config set --url localhost",
    "switch-devnet":"solana config set --url devnet",
    "switch-testnet":"solana config set --url testnet",
    "switch-mainnet-beta":"solana config set --url mainnet-beta",
    "start-server": "solana-test-validator",
    "build": "cargo build-bpf --manifest-path=./contracts/sol-liquity/program/Cargo.toml --bpf-out-dir=contracts/sol-liquity/dist",
    "clean": "cargo clean --manifest-path=./contracts/sol-liquity/program/Cargo.toml && rm -rf ./contracts/sol-liquity/dist",
    "deploy":"solana program deploy contracts/sol-liquity/dist/sol-liquity.so",
    "test": "cargo test-bpf --manifest-path=./contracts/sol-liquity/program/Cargo.toml"
  }
}
